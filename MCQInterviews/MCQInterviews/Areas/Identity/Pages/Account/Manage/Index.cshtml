@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}


<partial name="_StatusMessage" for="StatusMessage" />
<div class="card">
    <div class="card-header text-center"> @ViewData["Title"] </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                @if (ViewData["ImageUploadError"] != null)
                {
                    <div class="alert alert-danger">@ViewData["ImageUploadError"]</div>
                }
                <form id="profile-form" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                        
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="Input.ProfileImage" class="form-label">Profile Image</label>
                                <input type="file" asp-for="Input.ProfileImage" id="imageProfile" accept=".jpg, .jpeg, .png" class="form-control" placeholder="Upload your profile picture" />
                               
                                <span asp-validation-for="Input.ProfileImage" class="text-danger"></span>
                            </div>
                            <div class="profile-picture">
                                @* <img src="~/img/no-image.webp" class="img-fluid img-thumbnail" alt="User Profile Picture"> *@
                                <img src="@(!string.IsNullOrEmpty(Model.Input.ProfileImagePath) ? Model.Input.ProfileImagePath : "/img/no-image.webp")" class="img-fluid img-thumbnail" alt="User Profile Picture">
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="row">
                                <div class="form-group mb-3 col-md-6">
                                    <label asp-for="Input.FirstName" class="form-label">First Name</label>
                                    <input asp-for="Input.FirstName" class="form-control" placeholder="Please enter your first name number." />
                                   
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3 col-md-6">
                                    <label asp-for="Input.LastName" class="form-label">Last Name</label>
                                    <input asp-for="Input.LastName" class="form-control" placeholder="Please enter your last name number." />
                                   
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6 mb-3">
                                    <label asp-for="Input.Country" class="form-label"></label>
                                    <input asp-for="Input.Country" class="form-control" placeholder="Country" />
                                    
                                    <span asp-validation-for="Input.Country" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6 mb-3">
                                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                                    
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-12 mb-3">
                                    <label asp-for="Input.Description" class="form-label"></label>
                                    <textarea asp-for="Input.Description" class="form-control" placeholder="Tell us about yourself."></textarea>
                                    
                                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                                </div>
                            </div>
                           
                            
                            
                            
                            
                        </div>
                    </div>

                    <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
