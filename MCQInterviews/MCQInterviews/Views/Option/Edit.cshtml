@model MCQInterviews.Models.ViewModels.EditOptionRequest
@{
    ViewData["Title"] = "Edit Option";
}

<div class="container py-3">
    @if (TempData["errorMsg"] != null)
    {
        <div class="alert alert-danger">
            <i class="fa fa-exclamation-triangle"></i>
            @TempData["errorMsg"]
        </div>
    }
    <div class="card mt-2">
        <div class="card-header">
            <h5 class="text-primary text-center">Edit Option</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <input type="hidden" asp-for="Id" />  <div class="row mb-3">
                    <div class="form-group col-12">
                        @Html.Label("Question", "Question")
                        @Html.TextArea("Question", (string)ViewBag.QuestionText, new { @class = "form-control", @type = "text", @readonly = "readonly" })
                    </div>


                    <div class="form-group col-4">
                        @Html.TextBoxFor(m => m.QuestionId, new { @class = "form-control", @type = "hidden" })
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="form-group col-12">
                        @Html.LabelFor(m => m.Text, "Option")
                        <textarea class="form-control" name="Text" rows="3">@Html.Raw(Model.Text)</textarea>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-edit"></i> Update Option</button>
                </div>
            </form>
        </div>
    </div>
</div>