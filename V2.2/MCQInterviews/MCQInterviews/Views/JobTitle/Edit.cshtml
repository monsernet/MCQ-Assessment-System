@model MCQInterviews.Models.ViewModels.EditJobTitleRequest
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container-fluid">
        <h3>Edit Job Title  </h3>
    </div>
</div>
<div class="container py-5">
    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-danger">
            <i class="fa fa-exclamation-triangle"></i>
            @TempData["AlertMessage"]
        </div>
    }
    <form method="post">

       
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ThemeId">Select Category</label>
            <select asp-for="ThemeId" asp-items="@Model.Themes" class="form-control">
                <option value="">-- Select Theme --</option>
            </select>
            <span asp-validation-for="ThemeId" class="text-danger"></span>
        </div>



        <input type="hidden" asp-for="Id" />
        <div class="row justify-content-center mt-2">
            <div class="col-6">
                <div class="mb-3 d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary col-8"><i class="fas fa-sync-alt"></i>  Update Job Title</button>
                </div>
            </div>
        </div>
    </form>
</div>
